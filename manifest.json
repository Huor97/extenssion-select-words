{
  "description": "Cette extension s√©lectionne les mots !",
  "name": "select words",
  "version": "1.0",
  "manifest_version": 2,

  "icons": {
    "48": "icons/border-48.png"
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["selectWords.js"]
    }
  ],

  "permissions": ["<all_urls>", "activeTab", "storage"]
}
